@model EvidentaStudentilor.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <!--<label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />  
                <span asp-validation-for="UserId" class="text-danger"></span>-->
                <label> Student name/first name:</label>     @ViewBag.StudentName     <br><br>
            </div>
            <div class="form-group">
                <label asp-for="AdmisionYear" class="control-label"></label>
                <input asp-for="AdmisionYear" class="form-control" />
                <span asp-validation-for="AdmisionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentYear" class="control-label"></label>
                <input asp-for="CurrentYear" class="form-control" />
                <span asp-validation-for="CurrentYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--<label asp-for="ProfileId" class="control-label"></label>
                <input asp-for="ProfileId" class="form-control" />
                <span asp-validation-for="ProfileId" class="text-danger"></span>-->
                @Html.DropDownList("ProfileId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProfileId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Budget" /> @Html.DisplayNameFor(model => model.Budget)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
