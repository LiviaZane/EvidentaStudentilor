<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AMFS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="bg-light text-white text-center">
            <img align="center" src="~/img/siglaUCV-FACE.png" alt="siglaUCV-FACE" width="390" height="112">
            <img src="~/img/siglaUCV.png" alt="siglaUCV.png" width="100" height="100">
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white bg-dark navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <label id="HeloUser" style="color:white; padding-right: 30px;">AMFS</label>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <button onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
                        </li>
                        <li class="nav-item">
                            <button onclick="location.href='@Url.Action("Privacy", "Home")'">Privacy</button>
                        </li>
                        @Html.Partial("_PartialLayout")
                    </ul>
                    @Html.Partial("_PartialLoginView")
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-center bg-dark text-white">
        <div class="container">
            &copy; 2023 - AMFS, Automated Computer and Electronics Faculty, email: ace@ucv.ro, phone: +4074562563
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
