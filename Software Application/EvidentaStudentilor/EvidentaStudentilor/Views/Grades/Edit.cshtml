@model EvidentaStudentilor.Models.Grade

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="ExamId" />
            <input type="hidden" asp-for="SubjectId" />
            <input type="hidden" asp-for="TeacherId" />
            <input type="hidden" asp-for="Year" />
            <input type="hidden" asp-for="Semester" />
            <input type="hidden" asp-for="Reexamination" />
