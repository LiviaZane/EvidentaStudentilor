@model EvidentaStudentilor.DataModel.Exam

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @Html.HiddenFor(model => model.ProfileId)                   @* Hide fields but post them*@
            @Html.HiddenFor(model => model.SubjectId)
            @Html.HiddenFor(model => model.TeacherId)
            @Html.HiddenFor(model => model.CurriculaId)
            @Html.HiddenFor(model => model.ProfileId)
            @Html.HiddenFor(model => model.StudyYear)
            @Html.HiddenFor(model => model.Semester)
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourIn" class="control-label"></label>
                <input asp-for="HourIn" class="form-control" />
                <span asp-validation-for="HourIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourOut" class="control-label"></label>
                <input asp-for="HourOut" class="form-control" />
                <span asp-validation-for="HourOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Closed" /> @Html.DisplayNameFor(model => model.Closed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
