                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOut)
            </td>
