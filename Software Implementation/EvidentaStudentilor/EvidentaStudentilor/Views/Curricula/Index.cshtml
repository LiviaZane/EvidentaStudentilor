@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@model IEnumerable<EvidentaStudentilor.DataModel.Curricula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
