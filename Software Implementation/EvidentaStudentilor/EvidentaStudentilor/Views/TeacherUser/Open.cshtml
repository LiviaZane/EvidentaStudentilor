@model EvidentaStudentilor.DataModel.Grade

@{
    ViewData["Title"] = "Open";
}

<h1>Grade the students</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Student
            </th>
            <th>
                Grade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Grades)
        {
            <tr>
                <td>
                    item.Student.Name
                </td>
                <td>
                    item.ActualGrade
                </td>
                <td>
                    <a asp-action="GradeIt" asp-route-id="@item.Id">Grade it</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
